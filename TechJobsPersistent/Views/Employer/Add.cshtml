@model TechJobsPersistent.ViewModels.AddEmployerViewModel
<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessAddEmployerForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <span asp-validation-for="Location"></span>
        <input asp-for="Location"/>
    </div>

    <input type="submit" value="Add Employer" />
</form>