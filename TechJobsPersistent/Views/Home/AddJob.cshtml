@model TechJobsPersistent.ViewModels.AddJobViewModel
<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmployerId">Employer</label>
        <select asp-for="EmployerId" asp-items="Model.Employers"></select>
        <span asp-validation-for="EmployerId"></span>
        <a asp-controller="Employer" asp-action="Add">Add Employer</a>


    </div>
    <div class="form-group">
        <label>Skills</label>
        @foreach (Skill skill in Model.Skills)
        {
            <div>
                <input type="checkbox" name="SkillId" value="@skill.Id" />
                <label>@skill.Name</label>
            </div>
        }
        <a asp-controller="Skill" asp-action="Add">Add Skill</a>


    </div>

        <input type="submit" value="Add Job" />
</form>

